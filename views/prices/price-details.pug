extends ../layouts/layout.pug

block content
  if (data)
    <div class='medium-12'>
      <div class='grid-x'>
        <div class='cell medium-4'>
          <div class='grid-x'>
            <div class='cell medium-9'>
              <h3 style="padding-left:10px; margin-bottom:20px">#{msg}</h3>
            </div>
            <div class='cell medium-3'>
              <a type='button' href="/prices/csv/#{data.id}" class='button info expanded'>Export</a>
            </div>
          </div>
        </div>
        <div class='cell medium-8'>
          <h3 class='medium-offset-3'>Edit price Info </h3>
        </div>
      </div>
    </div>
    <div class="grid-x">
      <div class="cell medium-4 large-4" style='padding-left: 10px'>
        <div class="card">
          <div class="card-divider">
            <h3>#{data.mAsset}</h3>
          </div>
          <div class="card-divider">
            <h4> Details </h4>
          </div>
          <div class="card-section">
          <p>Mirror price UST: #{data.priceUST}</p>
          <p>Real (Oracle) price UST: #{data.oraclePriceUST}</p>
          </div>
          <div class='card-section'>
            <p> <strong> Price Timestamp </strong> </p>
            <p> #{data.created_at}</p>
          </div>
        </div>
      </div>
    </div>
  else
    <div class='medium-12'>
      <div class='grid-x'>
        <div class='cell medium-6'>
          <div class='grid-x'>
            <div class='cell medium-12'>
              <h3 style="padding-left:10px; margin-bottom:20px">#{msg}</h3>
            </div>
          </div>
        </div>
        <div class='cell medium-12'>
          <p style="padding-left:10px; margin-bottom:20px; margin-top:40px"> Simply Said, <br/> You gave the <strong>wrong ID</strong> genius</p>
        </div>
      </div>
    </div>
