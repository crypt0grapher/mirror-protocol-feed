extends ../layouts/layout.pug

block content
  <div class='grid-x'>
    <div class='cell medium-4'>
      <h3 style="padding-left:10px; margin-bottom:20px">#{msg}</h3>
    </div>
    <div class='cell medium-4'>
      <a href="/prices/csv" type="button" class='info button ' style='margin-left:10px'>Export All Prices</a>
    </div>
  </div>
  <div class="grid-x">
    each value in prices
      <div class="cell medium-4 large-4" style='padding-left: 10px'>
        <div class="card">
          <a href="/prices/#{value.mAsset}" style='color: black'>
            <div class="card-divider">
              <h3>Mirror #{value.priceUST} UST, #{value.oraclePriceUST}</h3>
              <h3>Premium: #{value.premium}</h3>
            </div>
          </a>
          <div class="card-section">
            <h4>#{value.createdAt}</h4>
          </div>
        </div>
      </div>
  </div>

