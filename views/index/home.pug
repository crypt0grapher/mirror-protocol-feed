extends ../layouts/layout.pug
block content
  .container-fluid
    div
      h3 #{msg}
    #assets
      input.search(placeholder='Search asset')
      button.sort.btn.btn-secondary.btn-sm(data-sort='asset') Sort by asset
      table.table
        thead
          tr
            th(scope='col') Asset
            th(scope='col') Current Terraswap Price, UST
            th(scope='col') Current Oracle (&quot;Real&quot;) Price, UST
            th(scope='col') Current Premium
            th(scope='col') Mean Premium
            th(scope='col') Standard Deviation
        tbody
          tbody.list
              each value in prices
                tr
                  td.asset #{value.mAsset}
                  td #{value.priceUST}
                  td #{value.oraclePriceUST}
                  td.premium #{value.premium}
                  td.meanpremium #{value.meanPremium}
                  td #{value.sd}
