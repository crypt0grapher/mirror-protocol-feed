extends ../layouts/layout.pug

block content
  <div class='grid-x'>
    <div class='cell medium-4'>
      <h3 style="padding-left:10px; margin-bottom:20px">#{msg}</h3>
    </div>
    <div class='cell medium-4'>
      <a href="/contacts/csv" type="button" class='info button ' style='margin-left:10px'>Export All Contacts</a>
    </div>
    <div class='cell medium-4 '>
      <a href="/contacts/add" type="button" class="success button float-right"> Add Contact </a>
    </div>
  </div>
  <div class="grid-x">
    each value in contacts
      <div class="cell medium-4 large-4" style='padding-left: 10px'>
        <div class="card">
          <a href="/contacts/#{value.id}" style='color: black'>
            <div class="card-divider">
              <h3>#{value.lastName}, #{value.firstName}</h3>
            </div>
          </a>
          <div class="card-section">
            <h4>#{value.phone}</h4>
            <p>It has an easy to override visual style, and is appropriately subdued.</p>
          </div>
        </div>
      </div>
  </div>

  